{
  "name": "Personal Dev Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Language support
        "rust-lang.rust-analyzer",
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        
        // Container support
        "ms-vscode-remote.remote-containers",
        
        // Git
        "eamodio.gitlens"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  // Docker-specific mount configuration
  "mounts": [
    // Named volume for Claude config persistence
    {
      "source": "claude-devtemplate",
      "target": "/home/vscode/.claude",
      "type": "volume"
    }
  ],
  // Alternative: Use env file if you prefer
  "runArgs": ["--env-file", "${localWorkspaceFolder}/.devcontainer/.env"],
  "postCreateCommand": "bash .devcontainer/setup.sh || true && bash .devcontainer/github-workflow/ensure-mcp.sh || true",
  "postStartCommand": "bash .devcontainer/github-workflow/ensure-mcp.sh || true",
  "remoteUser": "vscode",
  // Ensure the volume is created if it doesn't exist
  "initializeCommand": "docker volume create claude-devtemplate || true"
}